---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';

const plan = {
  name: 'Individual Premier',
  description: 'Added flexibility and perks for frequent riders',
  price: '$89.99',
  priceSubtext: '/month + $40 trip fee per ride',
  savings: 'Save $30/month vs Standard Individual + Premier benefits',
  features: [
    'Everything in Standard Individual Plan',
    'Ability to request driver for friend/client (you must be present)',
    'Unlimited ride requests',
    'Covers you alone',
    '3PM - 3AM availability, 7 days a week',
    'Service available outside normal hours (by appointment)',
    'Priority booking during peak times',
    'Premium customer support',
    'No minimum commitment required'
  ]
};

const standardFeatures = [
  'Unlimited ride requests',
  '$40 trip fee per ride (plus gratuity)',
  'Covers the member only',
  '3PM - 3AM availability, 7 days a week',
  'Service available outside normal hours (by appointment)',
  '3-month minimum commitment'
];

const premierExtraServices = [
  {
    name: 'Car Concierge Services',
