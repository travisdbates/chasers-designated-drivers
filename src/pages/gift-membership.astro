---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';

const giftPlans = [
  {
    id: 'standard-individual',
    name: 'Standard Individual',
    price: '$59.99',
    description: 'Safe, on-demand transportation home'
  },
  {
    id: 'individual',
    name: 'Individual Premier',
    price: '$89.99', 
    description: 'Added flexibility and perks for frequent riders'
  },
  {
    id: 'joint',
    name: 'Joint Plan',
    price: '$89.99',
    description: 'Reliable transportation for two people'
  },
  {
    id: 'joint-premier',
    name: 'Joint Premier',
    price: '$149.99',
    description: 'Enhanced flexibility for couples'
  },
  {
    id: 'family',
    name: 'Friends & Family',
    price: '$249.99',
    description: 'Perfect for up to 4 individuals'
  }
];

const perfectFor = [
  {
    title: 'Friends or family celebrating a birthday or milestone',
    icon: 'ðŸŽ‚'
  },
  {
    title: 'Young adults or college students',
    icon: 'ðŸŽ“'
  },
  {
    title: 'Business associates and valued clients',
    icon: 'ðŸ’¼'
  }
