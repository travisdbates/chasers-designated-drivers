# AcceptBlue Payment Processing Configuration
# Get these credentials from Micamp Solutions (micampblue.com)

# AcceptBlue API Credentials
ACCEPTBLUE_API_KEY=your_api_key_here
ACCEPTBLUE_PIN=your_pin_here
ACCEPTBLUE_TOKENIZATION_KEY=your_tokenization_key_here

# Environment Settings
ACCEPTBLUE_ENVIRONMENT=sandbox
# Options: sandbox, production

# AcceptBlue API URLs (automatically set based on environment)
# Sandbox: https://sandbox-api.accept.blue
# Production: https://api.accept.blue

# Application Settings
SITE_URL=http://localhost:4321
# Production: https://chasersdd.com

# Email Configuration (Resend for customer notifications)
RESEND_API_KEY=re_your_resend_api_key_here
FROM_EMAIL=noreply@chasersdd.com

# SMS Configuration (Twilio for customer notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_MARKETING_EMAILS=true
ENABLE_MARKETING_SMS=true

# Database Configuration (for storing customer data)
DATABASE_URL=your_database_connection_string

# Security
SECRET_KEY=your_secret_key_for_session_management