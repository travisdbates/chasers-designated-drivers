---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
---

<BaseLayout
  title="Thank You - Chasers DD"
  description="Thank you for your driver application submission."
  keywords="thank you, application submitted"
>
  <Navigation />

  <main class="min-h-screen bg-gradient-to-b from-black via-[#212322] to-black">
    <!-- Success Message Section -->
    <section class="pt-32 pb-24 px-2 sm:px-3 lg:px-4">
      <div class="max-w-3xl mx-auto text-center">
        <div class="bg-gradient-to-br from-[#212322]/50 to-[#212322]/50 rounded-2xl p-8 lg:p-12 border border-gray-700">
          <!-- Success Icon -->
          <div class="mb-6 flex justify-center">
            <div class="w-20 h-20 bg-green-900/50 rounded-full flex items-center justify-center border-2 border-green-500">
              <svg class="w-10 h-10 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
          </div>

          <h1 class="text-3xl md:text-4xl font-bold text-white mb-4" style="font-family: 'Louize Display', serif;">
            Application <span class="text-[#c69214]">Submitted!</span>
          </h1>

          <p class="text-xl text-gray-300 mb-6 leading-relaxed">
            Thank you for applying to become a Chasers DD driver.
          </p>

          <p class="text-lg text-gray-400 mb-8">
            We'll review your application and get back to you within 2-3 business days.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/"
              class="bg-gradient-to-r from-[#c69214] to-[#b8841c] text-black px-8 py-4 rounded-lg font-bold hover:from-[#b8841c] hover:to-[#a67619] transition-all duration-300 transform hover:scale-105"
            >
              Return to Home
            </a>
            <a
              href="/about"
              class="bg-gradient-to-r from-gray-700 to-gray-800 text-white px-8 py-4 rounded-lg font-bold hover:from-[#c69214] hover:to-[#b8841c] hover:text-black transition-all duration-300"
            >
              Learn More About Us
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
