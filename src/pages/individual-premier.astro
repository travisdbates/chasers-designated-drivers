    benefit: 'Available at member rates',
    icon: 'üöó'
  },
  {
    name: 'Chauffeur in Your Car',
    description: 'Professional driver operates your own vehicle',
    benefit: '$40/hr (vs $60/hr for non-members)',
    icon: 'ü§µ'
  },
  {
    name: 'Luxury Transportation',
    description: 'SUV, Sprinter Van, airport transfers and concierge services',
    benefit: 'Member discounts on luxury fleet',
    icon: '‚úàÔ∏è'
  },
  {
    name: 'Priority Booking',
    description: 'Skip the wait during peak hours and busy nights',
    benefit: 'Guaranteed faster response times',
    icon: '‚ö°'
  }
];

const useCases = [
  {
    title: 'Business Professionals',
    description: 'Need to arrange safe transportation for clients and colleagues',
    icon: 'üíº'
  },
  {
    title: 'Social Hosts',
    description: 'Frequently host events and need reliable rides for guests',
    icon: 'ü•Ç'
  },
  {
    title: 'Frequent Riders',
    description: 'Use the service multiple times per month',
    icon: 'üöó'
  },
  {
    title: 'Safety Conscious',
    description: 'Want premium service and priority access',
    icon: 'üõ°Ô∏è'
