<style>
  .container-nav {
    max-width: none !important;
    width: 100% !important;
    margin-left: 0 !important;
    margin-right: 0 !important;
    padding-left: 2.8125rem !important; /* 45px - Worldclass nav padding */
    padding-right: 2.8125rem !important;
  }

  @media (max-width: 768px) {
    .container-nav {
      padding-left: 1rem !important;
      padding-right: 1rem !important;
    }
  }

  /* Contact bar styling */
  .nav-contact {
    background-color: #212322 !important;
    height: 56px;
    align-items: center;
    border: none !important;
  }

  @media (min-width: 1024px) {
    .nav-contact {
      display: flex;
    }
  }

  .nav-contact * {
    font-family: Overpass, sans-serif !important;
    font-size: 18px !important;
    font-weight: 400 !important;
    color: white !important;
  }

  .nav-contact svg {
    margin-right: 4px !important;
  }

  .nav-contact a {
    margin-right: 24px !important;
  }

  .nav-contact span {
    margin-left: 0 !important;
  }

  .nav-contact .flex.items-center:last-child {
    margin-left: auto;
  }

  .nav-contact .flex.items-center:last-child > a {
    margin: 0 !important;
  }

  .nav-contact a:hover {
    color: #d4af37 !important; /* gold on hover */
  }

  /* Main nav height and position below contact bar */
  .nav-main {
    height: 82px;
    display: flex;
    align-items: center;
    position: sticky;
    top: 56px; /* Position below 56px contact bar */
    z-index: 40;
    background-color: #fdfbf4; /* Match page background */
  }

  @media (max-width: 1024px) {
    .nav-main {
      top: 0; /* No contact bar on mobile and tablet */
      background-color: #212322; /* Dark background on mobile */
      border-bottom: none; /* Remove bottom border on mobile */
    }
  }

  /* Navigation link hover styles */
  .nav-main .nav-link {
    transition: color 0.3s ease !important;
  }

  .nav-main .nav-link:hover {
    color: #c69214 !important;
  }

  .nav-main .nav-link::after {
    display: none !important;
  }

  /* Plus icon transition */
  .nav-main .nav-link svg line:first-child {
    transition: transform 0.6s ease !important;
  }

  /* Mobile menu animation */
  #mobile-menu {
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    transition: max-height 0.5s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.4s ease-out;
    transform-origin: top;
  }

  #mobile-menu.menu-open {
    max-height: 600px;
    opacity: 1;
  }

  /* Mobile hamburger button - white on mobile */
  @media (max-width: 1024px) {
    #mobile-menu-button {
      color: white !important;
    }
  }

  /* Hamburger menu animation */
  .hamburger-line {
    transition: transform 0.3s ease, opacity 0.3s ease;
    transform-origin: 6px 12px;
  }

  .hamburger-open .hamburger-line-1 {
    transform: rotate(45deg);
  }

  .hamburger-open .hamburger-line-2 {
    opacity: 0;
  }

  .hamburger-open .hamburger-line-3 {
    transform: rotate(-45deg);
  }
</style>

