---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/Navigation.astro";
import HeroVideoCarousel from "../components/HeroVideoCarousel.tsx";
import AnimatedButton from "../components/AnimatedButton.astro";

// Hero video slides data
const heroSlides = [
  {
    id: "luxury-interior",
    src: "/videos/optimized/luxury-interior-hq.mp4",
    srcMobile: "/videos/optimized/luxury-interior-lq.mp4",
    poster:
      "data:image/svg+xml;base64,",
    title: "Luxury Designated Drivers",
    subtitle:
      "We drive you home in your own vehicle. Experience premium, discreet transportation with professional drivers.",
    cta: {
      text: "View Membership Plans",
      href: "/membership",
    },
  },
  {
    id: "professional-driver",
    src: "/videos/optimized/professional-driver-hq.mp4",
    srcMobile: "/videos/optimized/professional-driver-lq.mp4",
    poster:
      "data:image/svg+xml;base64,",
    title: "Professional Excellence",
    subtitle:
      "Our licensed, insured drivers provide unmatched service for your most important occasions.",
    cta: {
      text: "Learn More",
      href: "/how-it-works",
    },
  },
  {
    id: "nightlife-scene",
    src: "/videos/optimized/nightlife-scene-hq.mp4",
    srcMobile: "/videos/optimized/nightlife-scene-lq.mp4",
    poster:
      "data:image/svg+xml;base64,",
    title: "Elevate Your Night Out",
    subtitle:
      "From fine dining to exclusive venues, we ensure your evening is memorable for all the right reasons.",
    cta: {
      text: "Join Today",
      href: "/membership",
    },
  },
];
---

<BaseLayout
  title="Chasers DD - Luxury Designated Driver Service"
  description="Premium designated driver service offering professional, reliable transportation. Licensed drivers, luxury vehicles, 24/7 availability in Arizona."
  keywords="designated driver, luxury transportation, professional chauffeur, Arizona, safe ride, premium service"
>
  <!-- Navigation -->
  <Navigation />

  <!-- Hero Video Carousel -->
  <HeroVideoCarousel slides={heroSlides} client:load />

  <!-- Services Overview Section -->
  <section class="section-padding" style="background-color: #2d2d2d;">
    <div class="container-center">
      <div class="section-header animate-on-scroll text-center mb-12">
        <h2 class="text-display md:text-hero font-ivy-mode text-white mb-4" style="font-weight: 400;">
          Why Choose <span class="text-gold-primary">Chasers DD</span>?
        </h2>
        <div class="w-full h-px bg-gray-600 max-w-4xl mx-auto"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Professional Service -->
        <div class="animate-on-scroll group">
          <div class="overflow-hidden mb-6">
            <img
              src="/images/professional-service.jpg"
              alt="Professional chauffeur service"
              class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-105"
            />
          </div>
          <h3 class="text-heading font-ivy-mode text-white mb-4" style="font-weight: 400;">
            Professional Service
          </h3>
          <p class="text-gray-300 mb-6 text-subheading leading-relaxed">
            Licensed, insured, and extensively trained professionals who prioritize your safety and comfort. Our drivers deliver discrete, executive-level service with Arizona local expertise.
          </p>
          <AnimatedButton text="LEARN MORE" backgroundColor="#2d2d2d" />
        </div>

        <!-- Safety First -->
        <div class="animate-on-scroll group">
          <div class="overflow-hidden mb-6">
            <img
              src="/images/safety-first.jpg"
              alt="Safe and reliable transportation"
              class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-105"
            />
          </div>
          <h3 class="text-heading font-ivy-mode text-white mb-4" style="font-weight: 400;">
            Safety First
          </h3>
          <p class="text-gray-300 mb-6 text-subheading leading-relaxed">
            Your safety is our top priority. With comprehensive insurance coverage, rigorous driver screening, and 24/7 availability, we ensure peace of mind for every journey.
          </p>
          <AnimatedButton text="LEARN MORE" backgroundColor="#2d2d2d" />
        </div>

        <!-- Luxury Experience -->
        <div class="animate-on-scroll group">
          <div class="overflow-hidden mb-6">
            <img
              src="/images/luxury-experience.jpg"
              alt="Luxury transportation experience"
              class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-105"
            />
          </div>
          <h3 class="text-heading font-ivy-mode text-white mb-4" style="font-weight: 400;">
            Luxury Experience
          </h3>
          <p class="text-gray-300 mb-6 text-subheading leading-relaxed">
            Premium vehicles maintained to the highest standards. From business events to special occasions, we provide the comfort and style that elevates every experience.
          </p>
          <AnimatedButton text="LEARN MORE" backgroundColor="#2d2d2d" />
        </div>
      </div>
    </div>
  </section>

  <!-- Our Plans Section -->
  <section class="homepage-section bg-off-white">
    <div class="grid grid-cols-1 lg:grid-cols-2 items-center min-h-[500px]">
      <!-- Content -->
      <div class="py-section container-center">
        <div class="max-w-xl mx-auto lg:mx-0 lg:pr-8">
          <div class="animate-on-scroll">
            <h2 class="text-display lg:text-hero font-ivy-mode text-gray-900 mb-6" style="font-weight: 400;">
              Choose Your Perfect <span class="text-gold-primary"
                >Membership Plan</span
              >
            </h2>
            <p class="text-subheading text-gray-600 mb-8 leading-relaxed">
              From individual coverage to family and business plans, we have
              flexible membership options designed to fit your lifestyle and
              transportation needs.
            </p>

            <div class="space-y-4 mb-8">
              <div class="flex items-start space-x-3">
                <div
                  class="w-5 h-5 bg-gold-primary rounded-full flex-shrink-0 mt-1"
                >
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">
                    Individual & Joint Plans
                  </h3>
                  <p class="text-gray-600">Perfect for singles and couples</p>
                </div>
              </div>
              <div class="flex items-start space-x-3">
                <div
                  class="w-5 h-5 bg-gold-primary rounded-full flex-shrink-0 mt-1"
                >
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">Family Coverage</h3>
                  <p class="text-gray-600">Protect your entire family</p>
                </div>
              </div>
              <div class="flex items-start space-x-3">
                <div
                  class="w-5 h-5 bg-gold-primary rounded-full flex-shrink-0 mt-1"
                >
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">
                    Business Solutions
                  </h3>
                  <p class="text-gray-600">Corporate transportation programs</p>
                </div>
              </div>
            </div>

            <AnimatedButton text="VIEW ALL PLANS" href="/membership" backgroundColor="#fdfbf4" />
          </div>
        </div>
      </div>

      <!-- Image -->
      <div
        class="h-full min-h-[500px] overflow-hidden bg-gradient-to-br from-gray-900 to-gray-700 relative"
      >
        <img
          src="/images/plan.jpg"
          alt="Chasers DD Membership Plans"
          class="w-full h-full object-cover opacity-80"
        />
        <div
          class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"
        >
        </div>
      </div>
    </div>
  </section>

  <!-- Our Story Section -->
  <section class="homepage-section bg-gray-50">
    <div class="grid grid-cols-1 lg:grid-cols-2 items-center min-h-[500px]">
      <!-- Image -->
      <div
        class="h-full min-h-[500px] overflow-hidden bg-gradient-to-br from-gray-900 to-gray-700 relative"
      >
        <img
          src="/images/story.jpg"
          alt="Chasers DD Company Story"
          class="w-full h-full object-cover opacity-80"
        />
        <div
          class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"
        >
        </div>
      </div>

      <!-- Content -->
      <div class="py-section container-center">
        <div class="max-w-xl mx-auto lg:mx-0 lg:pl-8">
          <div class="animate-on-scroll">
            <h2 class="text-display lg:text-hero font-ivy-mode text-gray-900 mb-6" style="font-weight: 400;">
              Our <span class="text-gold-primary">Story</span>
            </h2>
            <p class="text-subheading text-gray-600 mb-6 leading-relaxed">
              Founded on the principle that everyone deserves safe, reliable
              transportation, Chasers DD has grown from a small local service to
              Arizona's premier designated driver company.
            </p>
            <p class="text-subheading text-gray-600 mb-8 leading-relaxed">
              We're not just about getting you from point A to point B – we're
              about creating experiences, building trust, and ensuring that your
              most important moments are handled with the care they deserve.
            </p>

            <div
              class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4"
            >
              <AnimatedButton text="LEARN OUR STORY" href="/about" backgroundColor="#f9fafb" />
              <AnimatedButton text="COMPANY HISTORY" href="/about#history" backgroundColor="#f9fafb" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="homepage-section bg-off-white">
    <div class="grid grid-cols-1 lg:grid-cols-2 items-center min-h-[500px]">
      <!-- Content -->
      <div class="py-section container-center">
        <div class="max-w-xl mx-auto lg:mx-0 lg:pr-8">
          <div class="animate-on-scroll">
            <h2 class="text-display lg:text-hero font-ivy-mode text-gray-900 mb-6" style="font-weight: 400;">
              Complete <span class="text-gold-primary"
                >Transportation Services</span
              >
            </h2>
            <p class="text-subheading text-gray-600 mb-8 leading-relaxed">
              Beyond designated driving, we offer a full suite of luxury
              transportation services to meet all your needs.
            </p>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8">
              <div class="bg-white p-4 rounded-lg border border-gray-200">
                <h3 class="font-semibold text-gray-900 mb-2">
                  Chauffeur Services
                </h3>
                <p class="text-sm text-gray-600">
                  Professional drivers in your car
                </p>
              </div>
              <div class="bg-white p-4 rounded-lg border border-gray-200">
                <h3 class="font-semibold text-gray-900 mb-2">
                  Luxury Transportation
                </h3>
                <p class="text-sm text-gray-600">Premium fleet vehicles</p>
              </div>
              <div class="bg-white p-4 rounded-lg border border-gray-200">
                <h3 class="font-semibold text-gray-900 mb-2">
                  Car Care Services
                </h3>
                <p class="text-sm text-gray-600">
                  Vehicle maintenance & errands
                </p>
              </div>
              <div class="bg-white p-4 rounded-lg border border-gray-200">
                <h3 class="font-semibold text-gray-900 mb-2">
                  Gift Memberships
                </h3>
                <p class="text-sm text-gray-600">Perfect for any occasion</p>
              </div>
            </div>

            <AnimatedButton text="EXPLORE SERVICES" href="/chauffeur" backgroundColor="#fdfbf4" />
          </div>
        </div>
      </div>

      <!-- Image -->
      <div
        class="h-full min-h-[500px] overflow-hidden bg-gradient-to-br from-gray-900 to-gray-700 relative"
      >
        <img
          src="/images/transport.jpg"
          alt="Chasers DD Services"
          class="w-full h-full object-cover opacity-80"
        />
        <div
          class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"
        >
        </div>
      </div>
    </div>
  </section>

  <!-- How We Work Section -->
  <section class="homepage-section bg-gray-50">
    <div class="grid grid-cols-1 lg:grid-cols-2 items-center min-h-[500px]">
      <!-- Image -->
      <div
        class="h-full min-h-[500px] overflow-hidden bg-gradient-to-br from-gray-900 to-gray-700 relative"
      >
        <img
          src="/images/work.jpg"
          alt="How Chasers DD Works"
          class="w-full h-full object-cover opacity-80"
        />
        <div
          class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"
        >
        </div>
      </div>

      <!-- Content -->
      <div class="py-section container-center">
        <div class="max-w-xl mx-auto lg:mx-0 lg:pl-8">
          <div class="animate-on-scroll">
            <h2 class="text-display lg:text-hero font-ivy-mode text-gray-900 mb-6" style="font-weight: 400;">
              How <span class="text-gold-primary">We Work</span>
            </h2>
            <p class="text-subheading text-gray-600 mb-8 leading-relaxed">
              Our streamlined process ensures you get professional, reliable
              service every time you need us.
            </p>

            <div class="space-y-6 mb-8">
              <div class="flex items-start space-x-4">
                <div
                  class="w-8 h-8 bg-gold-primary rounded-full flex items-center justify-center flex-shrink-0"
                >
                  <span class="text-white font-bold text-sm">1</span>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">
                    Book Your Ride
                  </h3>
                  <p class="text-gray-600">
                    Call or text us when you need a driver
                  </p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div
                  class="w-8 h-8 bg-gold-primary rounded-full flex items-center justify-center flex-shrink-0"
                >
                  <span class="text-white font-bold text-sm">2</span>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">We Arrive</h3>
                  <p class="text-gray-600">
                    Professional driver meets you at your location
                  </p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div
                  class="w-8 h-8 bg-gold-primary rounded-full flex items-center justify-center flex-shrink-0"
                >
                  <span class="text-white font-bold text-sm">3</span>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">
                    Safe Transport
                  </h3>
                  <p class="text-gray-600">
                    We drive you home safely in your vehicle
                  </p>
                </div>
              </div>
            </div>

            <AnimatedButton text="LEARN MORE" href="/how-it-works" backgroundColor="#f9fafb" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Team Section -->
  <section class="homepage-section bg-off-white">
    <div class="grid grid-cols-1 lg:grid-cols-2 items-center min-h-[500px]">
      <!-- Content -->
      <div class="py-section container-center">
        <div class="max-w-xl mx-auto lg:mx-0 lg:pr-8">
          <div class="animate-on-scroll">
            <h2 class="text-display lg:text-hero font-ivy-mode text-gray-900 mb-6" style="font-weight: 400;">
              Meet Our <span class="text-gold-primary">Professional Team</span>
            </h2>
            <p class="text-subheading text-gray-600 mb-6 leading-relaxed">
              Our drivers aren't just employees – they're carefully selected
              professionals who share our commitment to excellence and safety.
            </p>
            <p class="text-subheading text-gray-600 mb-8 leading-relaxed">
              Every team member undergoes rigorous background checks, extensive
              training, and ongoing education to ensure they meet our high
              standards.
            </p>

            <div class="bg-white p-6 rounded-lg border border-gray-200 mb-8">
              <div class="flex items-center space-x-4">
                <div
                  class="w-12 h-12 bg-gold-primary rounded-full flex items-center justify-center"
                >
                  <svg
                    class="w-6 h-6 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 10h-6M18 7v6"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">
                    Interested in Joining Our Team?
                  </h3>
                  <p class="text-gray-600">
                    We're always looking for qualified drivers
                  </p>
                </div>
              </div>
            </div>

            <div
              class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4"
            >
              <AnimatedButton text="MEET THE TEAM" href="/contact" backgroundColor="#fdfbf4" />
              <AnimatedButton text="BECOME A DRIVER" href="/contact#careers" backgroundColor="#fdfbf4" />
            </div>
          </div>
        </div>
      </div>

      <!-- Image -->
      <div
        class="h-full min-h-[500px] overflow-hidden bg-gradient-to-br from-gray-900 to-gray-700 relative"
      >
        <img
          src="/images/team.jpg"
          alt="Chasers DD Professional Team"
          class="w-full h-full object-cover opacity-80"
        />
        <div
          class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"
        >
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="homepage-section bg-gray-50">
    <div class="grid grid-cols-1 lg:grid-cols-2 items-center min-h-[500px]">
      <!-- Image -->
      <div
        class="h-full min-h-[500px] overflow-hidden bg-gradient-to-br from-gray-900 to-gray-700 relative"
      >
        <img
          src="/images/faq.jpg"
          alt="Customer Questions and Support"
          class="w-full h-full object-cover opacity-80"
        />
        <div
          class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"
        >
        </div>
      </div>

      <!-- Content -->
      <div class="py-section container-center">
        <div class="max-w-xl mx-auto lg:mx-0 lg:pl-8">
          <div class="animate-on-scroll">
            <h2 class="text-display lg:text-hero font-ivy-mode text-gray-900 mb-6" style="font-weight: 400;">
              Frequently Asked <span class="text-gold-primary">Questions</span>
            </h2>
            <p class="text-subheading text-gray-600 mb-8 leading-relaxed">
              Get answers to the most common questions about our services,
              membership plans, and how we operate.
            </p>

            <div class="space-y-4 mb-8">
              <div
                class="bg-white p-4 rounded-lg border-l-4 border-gold-primary"
              >
                <h3 class="font-semibold text-gray-900 mb-2">
                  How quickly can you arrive?
                </h3>
                <p class="text-gray-600 text-sm">
                  Typically 15-30 minutes in most areas
                </p>
              </div>
              <div
                class="bg-white p-4 rounded-lg border-l-4 border-gold-primary"
              >
                <h3 class="font-semibold text-gray-900 mb-2">
                  Are your drivers licensed and insured?
                </h3>
                <p class="text-gray-600 text-sm">
                  Yes, all drivers are fully licensed, insured, and background
                  checked
                </p>
              </div>
              <div
                class="bg-white p-4 rounded-lg border-l-4 border-gold-primary"
              >
                <h3 class="font-semibold text-gray-900 mb-2">
                  What areas do you serve?
                </h3>
                <p class="text-gray-600 text-sm">
                  We serve the greater Phoenix metropolitan area
                </p>
              </div>
            </div>

            <AnimatedButton text="VIEW ALL FAQs" href="/faq" backgroundColor="#fdfbf4" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="section-padding" style="background-color: #2d2d2d;">
    <div class="container-center">
      <div class="text-center animate-on-scroll">
        <h2 class="text-display md:text-hero font-ivy-mode text-white mb-6" style="font-weight: 400;">
          Ready to Experience <span class="text-gold-gradient"
            >Luxury Transportation</span
          >?
        </h2>
        <p class="text-subheading text-gray-300 mb-8 max-w-2xl mx-auto leading-relaxed">
          Join thousands of satisfied clients who trust Chasers DD for their
          most important occasions.
        </p>
        <div
          class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-6"
        >
          <AnimatedButton text="VIEW MEMBERSHIP PLANS" href="/membership" backgroundColor="#2d2d2d" />
          <AnimatedButton text="CONTACT US TODAY" href="/contact" backgroundColor="#2d2d2d" />
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-white py-16 px-2 sm:px-3 lg:px-4">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 mb-8">
        <!-- Left Section - Newsletter & Links -->
        <div class="lg:col-span-1">
          <div class="mb-8">
            <h3 class="text-xl font-bold text-gray-900 mb-4 font-serif">
              Subscribe to receive updates about our services & experiences
            </h3>

            <!-- Newsletter Form - Formspree -->
            <form
              action="https://formspree.io/f/moqrplda"
              method="POST"
              class="mb-6"
            >
              <div class="flex flex-col sm:flex-row gap-3">
                <input
                  type="email"
                  name="email"
                  placeholder="Your email address"
                  required
                  class="flex-1 px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-500 focus:border-[#c69214] focus:ring-1 focus:ring-[#c69214] focus:outline-none transition-colors"
                />
                <button
                  type="submit"
                  class="bg-gradient-to-r from-[#c69214] to-[#b8841c] text-black px-6 py-3 rounded-lg font-bold hover:from-[#b8841c] hover:to-[#a67619] transition-all duration-300 whitespace-nowrap"
                >
                  Subscribe
                </button>
              </div>
            </form>
          </div>

          <!-- Footer Links -->
          <div class="flex flex-wrap gap-6">
            <a
              href="/contact"
              class="text-gray-600 hover:text-[#c69214] transition-colors duration-200 relative group"
            >
              <span>Contact</span>
              <div
                class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#c69214] transition-all duration-200 group-hover:w-full"
              >
              </div>
            </a>
            <a
              href="/about"
              class="text-gray-600 hover:text-[#c69214] transition-colors duration-200 relative group"
            >
              <span>About Us</span>
              <div
                class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#c69214] transition-all duration-200 group-hover:w-full"
              >
              </div>
            </a>
            <a
              href="/faq"
              class="text-gray-600 hover:text-[#c69214] transition-colors duration-200 relative group"
            >
              <span>FAQ</span>
              <div
                class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#c69214] transition-all duration-200 group-hover:w-full"
              >
              </div>
            </a>
            <a
              href="/privacy-policy"
              class="text-gray-600 hover:text-[#c69214] transition-colors duration-200 relative group"
            >
              <span>Privacy Policy</span>
              <div
                class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#c69214] transition-all duration-200 group-hover:w-full"
              >
              </div>
            </a>
          </div>
        </div>

        <!-- Middle Section - Contact Info -->
        <div class="lg:col-span-1">
          <h3 class="text-xl font-bold text-gray-900 mb-6 font-serif">
            Contact Information
          </h3>

          <div class="space-y-6">
            <div>
              <h4 class="text-gray-600 text-sm mb-2">Call or Text</h4>
              <a
                href="tel:+14806953659"
                class="text-gray-900 text-lg font-medium hover:text-[#c69214] transition-colors duration-200 relative group"
