        }
      });
    }
  });
</script>


<script>
  // Dropdown functionality
  document.addEventListener('DOMContentLoaded', () => {
    const dropdownTriggers = document.querySelectorAll('[data-dropdown]');
    const dropdowns = document.querySelectorAll('[id^="dropdown-"]');
    
    let activeDropdown = null;
    let hoverTimeout = null;
    
    dropdownTriggers.forEach(trigger => {
      const dropdownId = 'dropdown-' + trigger.getAttribute('data-dropdown');
      const dropdown = document.getElementById(dropdownId);
      
      if (dropdown) {
        // Show dropdown on hover
        trigger.addEventListener('mouseenter', () => {
          clearTimeout(hoverTimeout);
          
          // Hide other dropdowns
          dropdowns.forEach(d => {
            if (d !== dropdown) {
              d.classList.add('opacity-0', 'invisible');
            }
          });
          
          // Show current dropdown
          dropdown.classList.remove('opacity-0', 'invisible');
          activeDropdown = dropdown;
        });
        
        // Keep dropdown open when hovering over trigger or dropdown
        [trigger, dropdown].forEach(element => {
          element.addEventListener('mouseenter', () => {
            clearTimeout(hoverTimeout);
          });
          
          element.addEventListener('mouseleave', () => {
            hoverTimeout = setTimeout(() => {
              if (activeDropdown) {
                activeDropdown.classList.add('opacity-0', 'invisible');
                activeDropdown = null;
              }
            }, 200);
          });
        });
      }
    });
    
    // Close dropdowns when clicking outside
    document.addEventListener('click', (e) => {
      if (!e.target.closest('[data-dropdown]') && !e.target.closest('[id^="dropdown-"]')) {
        dropdowns.forEach(dropdown => {
          dropdown.classList.add('opacity-0', 'invisible');
        });
        activeDropdown = null;
      }
    });
  });
</script>